// exercises
model Exercises {
  id Int @id @default(autoincrement())

  name String @unique

  tips String

  mistakes String

  description String?

  Workouts Workouts[]
}

// methods
model Methods {
  id Int @id @default(autoincrement())

  name String

  description String

  WorkoutsGroups WorkoutsGroups[]
}

// workouts
model Workouts {
  id Int @id @default(autoincrement())

  exerciseId Int @map(name: "exerciseId") // Definição explícita da chave estrangeira

  exercise Exercises @relation(fields: [exerciseId], references: [id])

  description String

  ExercisesSeries ExercisesSeries? @relation(fields: [exercisesSeriesId], references: [id])

  exercisesSeriesId Int?

  workoutSessions WorkoutSessions? @relation(fields: [workoutsSessionsId], references: [id])

  workoutsSessionsId Int? @map(name: "workoutsSessionsId") // Definição explícita da chave estrangeira
}

// workouts_groups
model WorkoutsGroups {
  id Int @id @default(autoincrement())

  name String

  description String

  dateStart DateTime

  dateEnd DateTime

  level Int

  userId Int

  user Users @relation(fields: [userId], references: [id])

  methodId Int

  method Methods @relation(fields: [methodId], references: [id])
}

// users
model Users {
  id Int @id @default(autoincrement())

  name String

  email String

  WorkoutsGroups WorkoutsGroups[]
}

// exercises_series
model ExercisesSeries {
  id Int @id @default(autoincrement())

  workoutId Int

  Workouts Workouts[]

  repetitions Int @default(15)

  weight Int?

  rest Int
}

// workout_sessions
model WorkoutSessions {
  id Int @id @default(autoincrement())

  workoutId Int

  Workouts Workouts[]

  date DateTime
}
