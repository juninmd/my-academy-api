{
  "name": "my-academy-api",
  "version": "0.0.1",
  "description": "A Academia fÃ¡cil",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm exec prisma generate --schema=./prisma/schema.prisma && nest build",
    "postinstall": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prestart": "npm run build && npm run prisma:pull && npm run prisma:push",
    "start": "node dist/src/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "npm exec prisma generate --schema=./prisma/schema.prisma",
    "prisma:push": "prisma db push",
    "prisma:format": "prisma format",
    "prisma:pull": "prisma db pull",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@scalar/nestjs-api-reference": "latest",
    "axios": "latest",
    "cache-manager": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "firebase-admin": "latest",
    "pg": "^8.17.2",
    "reflect-metadata": "latest",
    "rimraf": "latest",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/pg": "^8.16.0",
    "@types/supertest": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "globals": "^17.1.0",
    "jest": "^29.0.0",
    "prettier": "latest",
    "prisma": "^7.3.0",
    "source-map-support": "latest",
    "supertest": "latest",
    "ts-jest": "^29.0.0",
    "ts-loader": "latest",
    "ts-node": "latest",
    "tsconfig-paths": "latest",
    "typescript": "latest",
    "typescript-eslint": "^8.53.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
